# ========================================
# CONFIGURACIÓN GENERAL DEL MONOREPO
# ========================================

# Configuración de Base de Datos
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=project_management_db
DATABASE_USERNAME=user_project
DATABASE_PASSWORD=password_project

# Configuración de la API
API_PORT=3000
API_PREFIX=api
NODE_ENV=development

# Configuración de CORS
CORS_ORIGIN=http://localhost:4200

# Configuración de Logging
LOG_LEVEL=debug

# Configuración de JWT (para futuras implementaciones)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# Configuración de Swagger
SWAGGER_TITLE=Project Management API
SWAGGER_DESCRIPTION=API para gestión de proyectos técnicos
SWAGGER_VERSION=1.0

# Configuración de Redis (para futuras implementaciones)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Configuración de Email (para futuras implementaciones)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Configuración de AWS (para futuras implementaciones)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=your-bucket-name

# Configuración de Monitoreo
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key 